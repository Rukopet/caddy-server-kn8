:{$PORT:8080}

log {
	output stdout
	format json
	level INFO
}

handle /api/* {
	reverse_proxy {$KN8_CORE_URL:http://localhost:4000}
}

handle /health {
	reverse_proxy {$KN8_CORE_URL:http://localhost:4000}
}

handle {
	root * /srv
	file_server
	try_files {path} /index.html
}

handle_errors {
	respond "{http.error.status_code} {http.error.status_text}"
}
